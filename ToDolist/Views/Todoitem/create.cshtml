@* <h1>Welcome, @Model</h1> *@
<p>Here is your to-do list:</p>
<a href="addToDoList" style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px; font-size: 16px;">
    Create New
</a>

<table style="width: 80%; border-collapse: collapse; margin: 20px auto;">
    <tr>
        <th style="border: 1px solid #000; padding: 10px; background-color: #f2f2f2;">Title</th>
        <th style="border: 1px solid #000; padding: 10px; background-color: #f2f2f2;">Description</th>
        <th style="border: 1px solid #000; padding: 10px; background-color: #f2f2f2;">Deadline</th>
        <th style="border: 1px solid #000; padding: 10px; background-color: #f2f2f2;">Download file</th>
        <th style="border: 1px solid #000; padding: 10px; background-color: #f2f2f2;">Action</th>
    </tr>
    @foreach (var item in )
    {
        <tr>
            <td style="border: 1px solid #000; padding: 10px;">@item.Title</td>
            <td style="border: 1px solid #000; padding: 10px;">@item.Description</td>
            <td style="border: 1px solid #000; padding: 10px;">@item.Deadline</td>
            <td style="border: 1px solid #000; padding: 10px;">
                <a href="@Url.Content(item.file)" download style="color: #007bff;">Download</a>
            </td>
            <td style="border: 1px solid #000; padding: 10px;">
                <a href="/Todoitem/edit">edit</a>
                <button>delete</button>
            </td>
        </tr>
    }
</table>
